# Backend Environment Variables (.env)
# Copy this to .env and fill in your values

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Upstash Redis (Optional but HIGHLY recommended for caching)
# Sign up at https://console.upstash.com/
# Free tier: 10,000 requests/day, 256MB storage
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://hiring-portal-mocha.vercel.app,https://your-custom-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10

# Optional: External ML/AI Service URLs
ML_SERVICE_URL=
DOCUMENT_GENERATION_SERVICE_URL=
